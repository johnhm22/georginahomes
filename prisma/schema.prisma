generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @default(cuid())
  username   String   @unique
  password   String
  admin      Boolean? @default(false)
  first_name String
  last_name  String
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
}

model Properties {
  id                  String   @id @default(cuid())
  title               String
  slug                String
  monthly_rent        Int
  address             String
  description         String
  list_date           String?
  available_from_date String?
  photos              String[]
  updatedAt           DateTime @updatedAt
  createdAt           DateTime @default(now())
}
